<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>Untitled Document</title>
</head>

<body>
<?php include ("header.php");?>

<h2> Search result </h2>

<?php
// Check if the 'ID' field has been submitted before proceeding
if (isset($_POST['ID'])) {
    // Retrieve the ID from the form input
    $id = $_POST['ID'];
    $id = mysqli_real_escape_string($connect, $id);

    // Prepare the query to search for the doctor by ID
    $q = "SELECT ID, FirstName, LastName, Specialization, Password FROM doktor WHERE ID = '$id' ORDER BY ID";

    // Execute the query
    $result = @mysqli_query($connect, $q);

    if ($result) {
        // Display results in a table format
        echo '<table border="2">
        <tr><td><b>ID</b></td>
        <td><b>First Name</b></td>
        <td><b>Last Name</b></td>
        <td><b>Specialization</b></td>
        <td><b>Password</b></td>
        </tr>';

        // Fetch and display the record
        while ($row = mysqli_fetch_array($result, MYSQLI_ASSOC)) {
            echo '<tr>
            <td>' . $row['ID'] . '</td>
            <td>' . $row['FirstName'] . '</td>
            <td>' . $row['LastName'] . '</td>
            <td>' . $row['Specialization'] . '</td>
            <td>' . $row['Password'] . '</td>
            </tr>';
        }

        echo '</table>';
        mysqli_free_result($result);
    } else {
        // Error message if the query fails
        echo '<p class="error">If no record is shown, this is because you had an incorrect or missing entry in the search form.<br>Click the back button on the browser and try again.</p>';
        echo '<p>' . mysqli_error($connect) . '<br><br/>Query:' . $q . '</p>';
    }
} else {
    // Display an error message if 'ID' is not set in the form submission
    echo '<p class="error">Please enter an ID.</p>';
}

// Close the database connection
mysqli_close($connect);
?>
</body>
</html>
